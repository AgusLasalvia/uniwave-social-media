<style>
	section#home {
		width: 100%;
		min-height: 720px;
		display: flex;
		justify-content: center;
		padding: 0 5%;
		box-sizing: border-box;
	}

	.hero {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		gap: 2rem;
	}

	.hero h1 {
		color: var(--text-color);
		font-size: 2rem;
		line-height: 1.3;
		max-width: 600px;
		text-align: start;
	}

	.hero p {
		color: var(--text-color);
		margin-bottom: 2rem;
	}

	.hero strong {
		color: var(--primary-color);
	}

	.cta-button {
		background: var(--primary-color);
		color: white;
		border: none;
		padding: 1rem 2rem;
		border-radius: 10px;
		font-size: 1.1rem;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.cta-button:hover {
		background: var(--accent-color);
		transform: translateY(-2px);
	}

	.hero figure img {
		width: 300px;
		border-radius: 10px;
		box-shadow: 0 0 20px var(--primary-color);
	}

	/* CTA Section */
	#download {
		background: var(--bg-color);
		padding: 6rem 2rem;
		text-align: center;
		margin: 6rem 0;
	}

	h2 {
		color: var(--text-color);
		text-decoration: underline var(--primary-color);
		font-size: 2.5rem;
		margin: 0 0 1rem 0;
		font-weight: 700;
	}

	.cta-content p {
		color: white;
		font-size: 1.2rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.cta-buttons {
		display: flex;
		gap: 2.5rem;
		justify-content: center;
		flex-wrap: wrap;
		align-items: center;
	}

	.store-button {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		background: var(--primary-color);
		color: white;
		text-decoration: none;
		padding: 1rem 1.75rem;
		border-radius: 12px;
		transition: all 0.3s ease;
		min-width: 220px;
		border: 2px solid var(--primary-color);
	}

	.store-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 25px rgba(129, 140, 248, 0.3);
		background: var(--accent-color);
		border-color: var(--accent-color);
	}

	.store-button.disabled {
		opacity: 0.7;
		cursor: not-allowed;
		background: var(--bg-color);
		border-color: var(--border-color);
		color: var(--accent-color);
	}

	.store-button.disabled:hover {
		transform: none;
		box-shadow: none;
		background: var(--bg-color);
		border-color: var(--border-color);
	}

	.store-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
	}

	.store-icon svg {
		width: 24px;
		height: 24px;
	}

	.android-store .store-icon {
		color: white;
	}

	.apple-store .store-icon {
		color: white;
	}

	.store-text {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}

	.store-label {
		font-size: 0.75rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 0.25rem;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.store-name {
		font-size: 1.1rem;
		font-weight: 600;
		color: white;
	}

	/* Contact Section */
	#contact {
		background: var(--bg-color);
		padding: 6rem 2rem;
		text-align: center;
		margin: 6rem 0;
	}

	.contact-content p {
		color: var(--accent-color);
		font-size: 1.2rem;
		margin: 0 0 3rem 0;
		opacity: 0.8;
	}

	.contact-info {
		max-width: 600px;
		margin: 0 auto;
		text-align: center;
	}

	.contact-email {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 2rem;
		padding: 2rem;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 16px;
		border: 1px solid var(--border-color);
	}

	.email-icon {
		font-size: 2.5rem;
		width: 60px;
		height: 60px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--primary-color);
		border-radius: 50%;
		color: white;
	}

	.email-details h3 {
		color: var(--text-color);
		font-size: 1.2rem;
		margin: 0 0 0.5rem 0;
		font-weight: 600;
	}

	.email-details p {
		color: var(--accent-color);
		margin: 0;
		font-size: 1.1rem;
		opacity: 0.9;
	}

	.contact-button {
		display: inline-block;
		background: var(--primary-color);
		color: white;
		text-decoration: none;
		padding: 1rem 2rem;
		border-radius: 12px;
		font-size: 1.1rem;
		font-weight: 600;
		transition: all 0.3s ease;
		border: 2px solid var(--primary-color);
	}

	.contact-button:hover {
		background: var(--accent-color);
		border-color: var(--accent-color);
		transform: translateY(-2px);
		box-shadow: 0 10px 25px rgba(129, 140, 248, 0.3);
	}

	.scroll-indicator {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 5px;
		font-family: sans-serif;
		font-size: 0.9rem;
		color: #666;
		cursor: pointer;
		margin-bottom: 4rem;
	}

	.scroll-indicator span {
		font-size: large;
	}

	a {
		color: var(--primary-color);
		font-size: xx-large;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.scroll-indicator {
			display: none;
		}

		.hero {
			flex-direction: column-reverse;
			text-align: center;
		}

		.hero h1 {
			text-align: center !important;
		}

		.cta-buttons {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}

		.store-button {
			width: 100%;
			max-width: 300px;
			justify-content: center;
		}

		.footer-links {
			gap: 1.5rem;
		}

		/* Contact responsive */

		.contact-content p {
			font-size: 1.1rem;
		}

		.contact-email {
			padding: 1.5rem;
			flex-direction: column;
			gap: 1rem;
		}

		.email-icon {
			font-size: 2rem;
			width: 50px;
			height: 50px;
		}
	}

	@media (max-width: 480px) {
		.hero figure img {
			width: 250px;
		}

		.hero h1 {
			font-size: 1.5rem;
		}

		#cta {
			padding: 3rem 1rem;
		}

		/* Contact responsive small */
		.contact-email {
			padding: 1.25rem;
			margin: 0 0.5rem;
		}

		.contact-button {
			padding: 0.875rem 1.5rem;
			font-size: 1rem;
		}
	}
</style>
